<Page x:Class="MonCine.Vues.FFilms"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MonCine.Vues"
        mc:Ignorable="d"
        Title="Films" Height="450" Width="800">
    <Grid Background="White">
        <!--<Grid Grid.Row="2" Grid.Column="2" />-->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="4*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*" />
        </Grid.RowDefinitions>
        <TextBlock x:Name="TitrePageFilm" HorizontalAlignment="Left" Margin="96,13,0,0" Text="Gestion des films" TextWrapping="Wrap" VerticalAlignment="Top" FontFamily="Arial Black" FontSize="36" Grid.Column="1"/>
        <Button Content="Ajouter un film" HorizontalAlignment="Center" Margin="0,130,0,0" Background="#FF87EE97" Width="96" FontSize="14" FontFamily="Arial" Height="26" VerticalAlignment="Top" RenderTransformOrigin="0.5,0.5"/>
        <RadioButton x:Name="radioEstAffiche" Content="Film a l'affiche" HorizontalAlignment="Left" Margin="12,94,0,0" VerticalAlignment="Top" FontFamily="Arial" FontSize="14" Checked="radioEstAffiche_Checked"/>
        <RadioButton x:Name="radioEstPasAffiche" Content="Film non a l'affiche" HorizontalAlignment="Center" Margin="0,70,0,0" VerticalAlignment="Top" FontSize="14" FontFamily="Arial" Checked="radioEstPasAffiche_Checked"/>
        <TextBlock x:Name="titreFiltre" HorizontalAlignment="Center" Margin="0,26,0,0" Text="Filtre" TextWrapping="Wrap" VerticalAlignment="Top" FontFamily="Arial Black" FontSize="22" TextDecorations="{x:Null}"/>
        <TextBlock x:Name="txtTest" Grid.Column="1" HorizontalAlignment="Left" Margin="222,207,0,0" Text="TextBlock" TextWrapping="Wrap" VerticalAlignment="Top"/>


    </Grid>
</Page>
