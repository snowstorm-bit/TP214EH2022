<Page x:Class="MonCine.Vues.FFilms"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MonCine.Vues"
        mc:Ignorable="d"
        Title="Films" Height="450" Width="800">
    <Grid Background="White">
        <!--<Grid Grid.Row="2" Grid.Column="2" />-->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="4*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*" />
        </Grid.RowDefinitions>
        <TextBlock x:Name="TitrePageFilm" HorizontalAlignment="Left" Margin="96,13,0,0" Text="Gestion des films" TextWrapping="Wrap" VerticalAlignment="Top" FontFamily="Arial Black" FontSize="36" Grid.Column="1"/>
        <Button Content="Ajouter un film" HorizontalAlignment="Center" Margin="0,130,0,0" Background="#FF7CB8FF" Width="96" FontSize="14" FontFamily="Arial" Height="26" VerticalAlignment="Top" RenderTransformOrigin="0.5,0.5" Click="ButtonAjouterFilmClick"/>
        <RadioButton x:Name="radioEstAffiche" Content="Film a l'affiche" HorizontalAlignment="Left" Margin="12,94,0,0" VerticalAlignment="Top" FontFamily="Arial" FontSize="14" Checked="radioEstAffiche_Checked"/>
        <RadioButton x:Name="radioEstPasAffiche" Content="Film non a l'affiche" HorizontalAlignment="Center" Margin="0,70,0,0" VerticalAlignment="Top" FontSize="14" FontFamily="Arial" Checked="radioEstPasAffiche_Checked"/>
        <TextBlock x:Name="titreFiltre" HorizontalAlignment="Center" Margin="0,26,0,0" Text="Filtre" TextWrapping="Wrap" VerticalAlignment="Top" FontFamily="Arial Black" FontSize="22" TextDecorations="{x:Null}"/>

        <Grid Grid.Column="1" Margin="0,59,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="1*" />
            </Grid.RowDefinitions>

            <ListView x:Name="lstFilms" Grid.Column="1" Grid.Row="1" d:ItemsSource="{d:SampleData ItemCount=5}" Cursor="Hand">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <TextBlock Grid.Row="0" Grid.Column="0" Text="Nom: " FontWeight="Bold" TextAlignment="Right"/>
                            <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding Nom}" Margin="5,0,15,0"/>

                            <TextBlock Grid.Row="0" Grid.Column="2" Text="Date:" FontWeight="Bold" TextAlignment="Right"/>
                            <TextBlock Grid.Row="0" Grid.Column="3" Text="{Binding DateSortieInternationnale}" Margin="5,0,15,0"/>

                            <TextBlock Grid.Row="0" Grid.Column="4" Text="À l'affiche: " FontWeight="Bold" TextAlignment="Right"/>
                            <TextBlock Grid.Row="0" Grid.Column="5" Text="{Binding Etat}" Margin="5,0,15,0"/>

                            <TextBlock Grid.Row="1" Grid.Column="0" Text="Id:" FontWeight="Bold" TextAlignment="Right"/>
                            <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding Id}" Margin="5,0,15,0"/>

                            <TextBlock Grid.Row="1" Grid.Column="2" Text="Note moyenne: " FontWeight="Bold" TextAlignment="Right"/>
                            <TextBlock Grid.Row="1" Grid.Column="3" Text="{Binding NoteMoy}" Margin="5,0,15,0"/>

                            <Button Grid.Row="0" Grid.Column="6" Content="Projection" HorizontalAlignment="Center"  Background="#FF7CB8FF" Width="70" FontSize="14" FontFamily="Arial" Height="22" VerticalAlignment="Top" />
                            <Button Grid.Row="1" Grid.Column="6" Content="Modifier" HorizontalAlignment="Center"  Background="#FF7CB8FF" Width="70" FontSize="14" FontFamily="Arial" Height="22" VerticalAlignment="Top" />


                        </Grid>
                    </DataTemplate>
                </ListView.ItemTemplate>
                <!--<ListView.View>-->
                    <!--<GridView>
                        <GridViewColumn Header="Id" DisplayMemberBinding="{Binding Id}" Width="180"/>
                        <GridViewColumn Header="Nom" DisplayMemberBinding="{Binding Nom}" Width="190"/>
                        <GridViewColumn Header="Etat" DisplayMemberBinding="{Binding Etat}" Width="50"/>
                        <GridViewColumn Header="Note moyenne" DisplayMemberBinding="{Binding NoteMoy}" Width="61"/>
                        <GridViewColumn Header="Date de sortie" DisplayMemberBinding="{Binding DateSortieInternationnale}" Width="150"/>
                    </GridView>-->
                <!--</ListView.View>-->
            </ListView>


        </Grid>

    </Grid>
</Page>
