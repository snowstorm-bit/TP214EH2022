<Page x:Class="MonCine.Vues.FAbonnes"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MonCine.Vues"
        mc:Ignorable="d"
        Title="FAbonnes" Height="450" Width="800">
    <Grid>
        <Image Grid.Row="0" Grid.Column="0" Source="/Ressources/Images/Logo.png" Margin="0,0,750,390"/>
        <Label Grid.Row="0" Content="Liste des abonnées" Foreground="#FFF9F7F7" HorizontalAlignment="Center" FontFamily="MV Boli" FontSize="36" FontWeight="Bold" Margin="0,0,0,390"/>
        <DataGrid Name="DataGridAbonnes" ItemsSource="{Binding}" AutoGenerateColumns="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Nom" Binding="{Binding Nom}" />
                <DataGridTextColumn Header="Nom" Binding="{Binding Nom}" />

            </DataGrid.Columns>
        </DataGrid>

    </Grid>
</Page>
